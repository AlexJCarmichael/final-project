<div class='card form-width middle'>
  <div class='card-content'>
    <%= form_for @user do |f| %>
      <div>
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <div>
        <%= f.submit class: "btn" %>
        <%= link_to "Sign in", sign_in_path, class: "btn color-stay" %>
      </div>
    <% end %>
  </div>
</div>
