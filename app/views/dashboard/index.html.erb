<h1>Dashboard for <%= current_user.user_name %></h1>

<div class='row'>
  <div class='dash-display col s12 m3'>
    <h4 id='clicky-button'>Characters</h4>
    <div class='hide-on-small-only' id='expand-me'>
      <% @characters.each do |char| %>
        <p><%= char.name %></p>
        <p><%= char.stats.first.name %> | <%= char.stats.first.value %></p>
        <p><%= char.stats.second.name %> | <%= char.stats.second.value %></p>
      <% end %>
    </div>
  </div>


  <div class='dash-display col s12 m3 offset-m1'>
    <h4 id='clicky-button2'>Games</h4>
    <div class='hide-on-small-only' id='expand-me2'>
      <p><%= @session.session_name %></p>
      <% @session.actors.each do |act| %>
        <p><%= act.name %> playing as <%= act.characters.first.name %></p>
      <% end %>
    </div>
  </div>

  <div class='dash-display col s12 m3 offset-m1'>
    <h4 id='clicky-button3'>Friends</h4>
    <div class='hide-on-small-only' id='expand-me3'>
      <% @characters.each do |char| %>
        <p><%= char.name %></p>
        <p><%= char.stats.first.name %> | <%= char.stats.first.value %></p>
        <p><%= char.stats.second.name %> | <%= char.stats.second.value %></p>
      <% end %>
    </div>
  </div>
</div>
