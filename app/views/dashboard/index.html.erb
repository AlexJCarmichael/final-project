<h1>Dashboard for <%= current_user.user_name %></h1>

<div class='row'>
  <div class='dash-display col s12 m3'>
    <h5 class='clicky-button'>Characters</h5>
    <div class='hide-on-small-only expand-me'>
      <% @characters.each do |char| %>
        <p><%= link_to "#{char.name}", character_path("#{char.id}") %></p>
      <% end %>
      <strong>Create new characters from a game session</strong>
    </div>
  </div>


  <div class='dash-display col s12 m3 offset-m1'>
    <h5 class='clicky-button'>Games</h5>
    <div class='hide-on-small-only expand-me'>
      <% @sessions.each do |session| %>
      <h6><%= link_to "#{session.session_name}", game_session_path("#{session.id}") %></h6>
        <% session.characters.each do |char| %>
          <p><%= char.user.name %> playing as <%= char.name %></p>
        <% end %>
      <% end %>
      <strong class='click-me'>Create a Game</strong>
      <%= react_component('NewGame', controller: "game_sessions", redirect_controller: "game_sessions", name: "session_name", sheet_id: 1) %>
    </div>
  </div>

  <div class='dash-display col s12 m3 offset-m1'>
    <h5 class='clicky-button'>Friends</h5>
    <div class='hide-on-small-only expand-me'>
      <% @friends.each do |friend| %>
        <p><%= friend.name %></p>
      <% end %>
      <h5>Pending Friends</h5>
      <% @pending.each do |pend| %>
        <p><%= pend.name %></p>
      <% end %>
      <%#TODO: Change this to react ajax after project, currenly an a-tag that redirect_to back%>
      <%= react_component('UserSearch', userInvite: true) %>
    </div>
  </div>
</div>
