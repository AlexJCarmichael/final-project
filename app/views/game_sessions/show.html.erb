<h3><%= @game.session_name %></h3>

<div class='row'>
  <div class='dash-display col s12 m3'>
    <h5 class='clicky-button'>Actors in this game</h5>
    <div class='hide-on-small-only expand-me'>
      <% @characters.each do |char| %>
        <p><%= char.user.name %> as <%= link_to "#{char.name}", character_path("#{char.id}") %></p>
      <% end %>
      <strong><%= link_to "Create character", new_character_path %></strong>
    </div>
  </div>

  <%= react_component('UserCard', users: @users) %>
</div>
