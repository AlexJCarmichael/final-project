<h6 class="center-text">Feel free to log in as test_user@example.com with the password of password</h6>
<div class='card form-width middle'>
  <div class='card-content'>
    <%= form_for :session, url: session_path do |form| %>
      <div class="text-field">
        <%= form.label :email %>
        <%= form.text_field :email, type: 'email' %>
      </div>

      <div class="password-field">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>

      <div class="submit-field">
        <%= form.submit class: "btn" %>
        <%= link_to t(".sign_up"), sign_up_path, class: "btn color-stay" %>
      </div>
    <% end %>
  </div>
</div>
