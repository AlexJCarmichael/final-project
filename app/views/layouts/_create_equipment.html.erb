<div class='body-color'>
  <div class='in-a-modal card'>
    <%= form_for @equip, remote: true do |f| %>
      <p>Name(required): <%= f.text_field :name %></p>
      <p>Category(required): <%= f.text_field :category %></p>
      <p>Sub Category(required):<%= f.text_field :sub_category %></p>
      <p>Armor: <%= f.text_field :armor %></p>
      <p>Damage: <%= f.text_field :damage %></p>
      <p>Weight: <%= f.text_field :weight %></p>
      <p>Reach: <%= f.text_field :reach %></p>
      <p>Effects: <%= f.text_field :effects %></p>
      <%= f.hidden_field :game_id, value: game_id %>
      <%= f.submit "Create Equipment"%>
    <% end %>
  </div>
</div>
